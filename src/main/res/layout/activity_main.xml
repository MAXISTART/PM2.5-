<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mianview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/down_re"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
       <!-- android:layout_marginBottom="33dp" -->



        <ImageView
            android:id="@+id/bgup"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@mipmap/bgup"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/cardLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@mipmap/bgdown"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/card0"
                android:layout_width="314dp"
                android:layout_height="50dp"
                android:background="@mipmap/card0"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/card1"
                android:layout_width="314dp"
                android:layout_height="145dp"
                android:background="@mipmap/card1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/card2"
                android:layout_width="314dp"
                android:layout_height="145dp"
                android:background="@mipmap/card2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/card3"
                android:layout_width="314dp"
                android:layout_height="145dp"
                android:background="@mipmap/card3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                />

        </LinearLayout>



        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/explore_re"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:background="@drawable/halfround"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        >
            <ImageView
                android:id="@+id/explore"
                android:layout_width="66dp"
                android:layout_height="23dp"
                android:background="@mipmap/explore"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>


    <ImageView
        android:id="@+id/reflash_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/reflash2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/blueTooth_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/bluetooth2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        />



    <RelativeLayout
        android:id="@+id/arrow_re"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/rounded"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:visibility="gone"
        >
            <ImageView
                android:id="@+id/arrow_img"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:background="@mipmap/arrow"
                android:layout_centerInParent="true"
                />


        <ImageView
            android:id="@+id/add_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/add"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />



        </RelativeLayout>



    <RelativeLayout
        android:id="@+id/secondScene"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0dp"

        >

        <LinearLayout
            android:id="@+id/cardLayout2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"

            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            >

            <FrameLayout
                android:id="@+id/card4"
                android:layout_width="314dp"
                android:layout_height="145dp"
                android:background="@mipmap/card5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                >
                    <TextView
                        android:id="@+id/text01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="50dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="150dp"
                        />

                </FrameLayout>

            <FrameLayout
                android:id="@+id/card5"
                android:layout_width="314dp"
                android:layout_height="145dp"
                android:background="@mipmap/card4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/text02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.0"
                    android:textSize="50dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="210dp"
                    />

            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>
